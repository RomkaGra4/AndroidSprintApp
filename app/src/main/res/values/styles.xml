<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleButtons" parent="StyleTitle14">
        <item name="backgroundTint">@color/categoriesColor</item>
        <item name="android:layout_marginEnd">@dimen/default_layout_margin</item>
        <item name="cornerRadius">@dimen/default_spacing_8</item>
    </style>

    <style name="Base.Theme.AndroidSprintApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/primaryBackgroundColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/primaryBackgroundColor</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">@dimen/default_spacing_8</item>
        <item name="android:paddingHorizontal">@dimen/navigation_bar_padding_horizontal</item>
        <item name="cornerRadius">@dimen/default_spacing_8</item>
    </style>

</resources>