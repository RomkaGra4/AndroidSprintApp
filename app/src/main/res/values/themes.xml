<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidSprintApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/navBarColor</item>

    </style>
    
    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">8px</item>
        <item name="android:paddingHorizontal">16px</item>
        <item name="cornerRadius">8px</item>
    </style>

    <style name="Theme.AndroidSprintApp" parent="Base.Theme.AndroidSprintApp" />
</resources>