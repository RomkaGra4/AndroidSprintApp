<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/default_spacing_8"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/default_spacing_8">

    <LinearLayout
        android:layout_width="@dimen/category_item_width"
        android:layout_height="@dimen/category_item_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="@dimen/category_item_width"
            android:layout_height="@dimen/category_image_height" />

        <TextView
            android:id="@+id/category_name"
            style="@style/ShapedTextDrawable"
            android:layout_width="@dimen/category_name_width"
            android:layout_height="@dimen/category_name_height"
            android:text="Заголовок"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/category_category_description"
            android:layout_width="@dimen/category_item_width"
            android:layout_height="@dimen/category_description_height"
            android:text="Описание"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>