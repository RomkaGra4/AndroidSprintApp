<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/default_spacing_8"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/default_spacing_8">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tools.src="@drawable/test_image"/>

        <TextView
            android:id="@+id/category_name"
            style="@style/ShapedTextDrawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tools="Заголовок"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/category_category_description"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/category_description_height"
            android:tools="Описание"
            android:textSize="@dimen/category_description_text_size" />

    </LinearLayout>

</androidx.cardview.widget.CardView>